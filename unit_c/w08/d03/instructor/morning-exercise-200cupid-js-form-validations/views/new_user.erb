<h1>Sign up!</h1>

<form method="POST" action="/users" class="new-user">

  <input type="text" id="user_name" name="name" placeholder="Username">
  <input type="password" id="user_password" name="password" placeholder="password">
  <input type="password" id="user_password_confirmation" name="password_confirmation" placeholder="password confirmation">
  <input type="date" id="user_born_on" name="born_on" placeholder="Your Birthday">
  <input type="text" id="user_location" name="location" placeholder="Your location">
  <input type="text" id="user_avatar_img_url" name="avatar_img_url" placeholder="Avatar Image URL!">

  <button>Sign up</button>

</form>

<script src="/js/validate-user-form.js"></script>
