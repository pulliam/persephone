<h1>Listing Houses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.name %></td>
        <td>
          <a href="/house/<%= house.id %>">Details</a>
        </td>
        <td>
          <a href="/houses/<%= house.id %>/edit">Edit</a>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="/house/new">New House</a>
