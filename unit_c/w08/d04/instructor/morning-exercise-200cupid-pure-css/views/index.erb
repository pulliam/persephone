<div class="pure-g">
  <% if @current_user %>
    <div class="pure-u-1-1">
      <h1>Hey there <%= @current_user.name %>! Looking good.</h1>
      <img class="med-img" src="/img/heart.png" alt="heart">
    </div>
    <div class="pure-u-1-2">
      <a href="/users" class="pure-button">See users</a>
    </div>
    <div class="pure-u-1-2">
      <a href="/vists" class="pure-button">See Visitors</a>
    </div>
  <% else %>
    <div class="pure-u-1-1">
      <h1>Hi and welcome to 200Cupid!</h1>
    </div>
  <% end %>
</div>

<div id="chat-box">
  <p class="chat-line">
    <span class="chat-name">Bot</span><span class="chat-msg">Hi!</span>
  </p>
  <p class="chat-typing" hidden>User is typing...</p>
</div>

<script src="/js/chat-user.js"></script>
