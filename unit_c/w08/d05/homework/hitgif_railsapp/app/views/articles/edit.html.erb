<div class="container wrapper">
<div class="jumbotron jumbotronwhite lessmarginontop">

<!-- Title of Page -->
<div class="articles-header">
  <h2>What's your version of this article?</h2>
</div>
<!--/Title of Page -->

<!-- Body of Page -->  
<div class="articles-body">
    <% if @article_gif %> 
        <img class="article-gif-each-border img-rounded" style="max-width:300px;"src="<%= @article_gif %>" style="max"><br><br>
      <% end %> 

    <% form_for @article, url: {action: "create"} do |f| %>

      <%= f.text_field :name, :value => @article.name %>
    <p>Select New Category:</p>
      <%= f.radio_button :category, "1", :checked => true %> Education
      <%= f.radio_button :category, "2" %> Sports
      <%= f.radio_button :category, "3" %> Lifestyle
      <%= f.radio_button :category, "4" %> Animals
      <%= f.radio_button :category, "5" %> Tv
      <%= f.radio_button :category, "6" %> Travel
      <%= f.label :content, "Edit/Redo" %><br>
      <%= f.text_area :content, :value => @article.content, size: "90x10", :html => { :id => "article-content"} %>
      <%=  f.submit "Update Article" %>
    <% end %>
</div>
<!--/Body of Page -->

</div>
</div>
